# GPU image with vLLM backend for DeepSeek-OCR
# Use CUDA 12.1 + cuDNN 9 runtime from NVIDIA base (widely available on Docker Hub)
FROM nvidia/cuda:12.1.1-cudnn9-runtime-ubuntu22.04

ENV DEBIAN_FRONTEND=noninteractive \
    PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1

RUN apt-get update && apt-get install -y --no-install-recommends \
    python3 python3-pip python3-venv \
    build-essential \
    libglib2.0-0 libgl1 \
    && rm -rf /var/lib/apt/lists/*

RUN python3 -m pip install --upgrade pip

WORKDIR /srv/app

COPY requirements.txt ./
# Install deps except torch (let vLLM/nightly manage CUDA bindings)
RUN grep -v '^torch' requirements.txt > req.txt && python3 -m pip install -r req.txt && rm req.txt

# Install vLLM (nightly)
RUN python3 -m pip install -U vllm --pre --extra-index-url https://wheels.vllm.ai/nightly

COPY app ./app

ENV APP_BACKEND=vllm \
    APP_FORCE_CPU=false

EXPOSE 8000
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000"]
