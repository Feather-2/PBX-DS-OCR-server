# GPU image with vLLM backend for DeepSeek-OCR
# Use PyTorch CUDA 12.1 + cuDNN 9 runtime as base to match vLLM nightly wheels
FROM pytorch/pytorch:2.6.0-cuda12.1-cudnn9-runtime

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1

RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    libglib2.0-0 libgl1 \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /srv/app

COPY requirements.txt ./
# torch already present; avoid reinstall
RUN grep -v '^torch' requirements.txt > req.txt && pip install --no-cache-dir -r req.txt && rm req.txt

# Install vLLM (nightly)
RUN pip install -U vllm --pre --extra-index-url https://wheels.vllm.ai/nightly

COPY app ./app

ENV APP_BACKEND=vllm \
    APP_FORCE_CPU=false

EXPOSE 8000
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000"]
