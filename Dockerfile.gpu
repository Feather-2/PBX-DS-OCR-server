# GPU-enabled image for DeepSeek-OCR server
FROM pytorch/pytorch:2.4.1-cuda11.8-cudnn9-runtime

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1

RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    libglib2.0-0 libgl1 \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /srv/app

COPY requirements.txt ./
# torch already in base image; don't reinstall to avoid conflicts
RUN grep -v '^torch' requirements.txt > req.txt && pip install --no-cache-dir -r req.txt && rm req.txt

COPY app ./app
COPY web ./web

ENV APP_FORCE_CPU=false

EXPOSE 8000
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000"]
